<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/grey_400" />
            <corners android:radius="13dp" />
            <size
                android:width="50dp"
                android:height="25dp" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:gravity="start"
        android:left="1dp"
        android:top="1dp">
        <shape>
            <solid android:color="@color/white_1000" />
            <corners android:radius="13dp" />
            <size
                android:width="24dp"
                android:height="24dp" />
        </shape>
    </item>

</layer-list>